#progressbar { background-image: url(/assets/theme4/progressbar_fill_blue.png); }
.subscribe input.submit { background-image: url(/assets/theme4/form_button_blue.png); }

<% elsif APP_CONFIG[:theme4][:colour] == 'dark_green' %>
